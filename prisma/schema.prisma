generator client {
  provider      = "prisma-client-js"
  output        = "../app/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String?  @unique
  createdAt       DateTime @default(now())
  defaultCurrency String?  // Supported: "INR", "USD" (null means not set yet)

  activeWalletId  String?
  activeWallet    Wallet?  @relation("ActiveWallet", fields: [activeWalletId], references: [id])

  wallets         Wallet[]
  paymentSessions PaymentSession[]
  payments        Payment[]
}

model Wallet {
  id        String      @id @default(cuid())
  userId    String?
  user      User?       @relation(fields: [userId], references: [id])

  address   String      @unique
  type      WalletType
  createdAt DateTime    @default(now())

  payments  Payment[]
  sessions  PaymentSession[]
  activeUsers User[]    @relation("ActiveWallet")
}

enum WalletType {
  embedded
  external
}

model PaymentSession {
  id         String       @id @default(cuid())
  userId     String
  walletId   String
  store      String
  amountUSD  Float
  status     SessionStatus @default(pending)
  createdAt  DateTime     @default(now())
  expiresAt  DateTime?    // Session expires 10 minutes after creation (nullable for legacy sessions)
  giftCardId String?      // Gift card assigned to this session

  user       User         @relation(fields: [userId], references: [id])
  wallet     Wallet       @relation(fields: [walletId], references: [id])
  payment    Payment?
  giftCard   GiftCard?    @relation(fields: [giftCardId], references: [id])
}

enum SessionStatus {
  pending
  processing
  paid
  email_failed
  fulfilled
  expired
  failed
}

model Payment {
  id           String        @id @default(cuid())
  sessionId    String        @unique
  walletId     String
  userId       String
  amountCrypto Float
  token        String
  txHash       String?
  status       PaymentStatus @default(pending)
  createdAt    DateTime      @default(now())

  session      PaymentSession @relation(fields: [sessionId], references: [id])
  wallet       Wallet         @relation(fields: [walletId], references: [id])
  user         User           @relation(fields: [userId], references: [id])
  reservedGiftCard GiftCard?  @relation("ReservedGiftCard")
}

enum PaymentStatus {
  pending
  confirming
  succeeded
  email_failed
  failed
}

model GiftCard {
  id              String   @id @default(cuid())
  store           String
  currency        String
  amountMinor     Int      
  amountUSD       Float
  validityDays    Int

  encryptedNumber String
  encryptedPin    String
  iv              String
  tag             String

  active          Boolean   @default(true)
  createdAt       DateTime  @default(now())
  
  reservedByPaymentId String? @unique
  reservedAt          DateTime?

  sessions        PaymentSession[] // Sessions that used this gift card
  reservedPayment Payment?        @relation("ReservedGiftCard", fields: [reservedByPaymentId], references: [id])
}
