{
    "manifest_version": 3,
    "name": "Mizu Pay",
    "version": "1.0.0",
    "description": "Make seamless payments in any ecommerce website using cUSD or CELO",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["content.css"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["logo.png"],
            "matches": ["<all_urls>"]
        }
    ]
}