{
  "name": "celo-pay-extension",
  "version": "1.0.0",
  "description": "A Chrome extension that enables seamless payments with CELO and cUSD on any e-commerce website",
  "main": "background.js",
  "scripts": {
    "build": "echo 'Extension is ready to use - no build step required'",
    "test": "echo 'Open test-checkout.html in Chrome to test the extension'",
    "install": "./install.sh",
    "package": "zip -r celo-pay-extension.zip . -x '*.git*' 'node_modules/*' '*.zip'"
  },
  "keywords": [
    "celo",
    "cryptocurrency",
    "payment",
    "browser-extension",
    "e-commerce",
    "cusd",
    "blockchain"
  ],
  "author": "CELO Pay Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/celo-pay-extension.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/celo-pay-extension/issues"
  },
  "homepage": "https://github.com/your-org/celo-pay-extension#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0"
  },
  "files": [
    "manifest.json",
    "background.js",
    "content.js",
    "content.css",
    "popup.html",
    "popup.js",
    "conversion-api.js",
    "celo-logo.svg",
    "icons/",
    "test-checkout.html",
    "install.sh",
    "README.md"
  ]
}
