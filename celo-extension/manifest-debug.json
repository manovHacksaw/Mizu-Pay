{
  "manifest_version": 3,
  "name": "CELO Pay - Debug Version",
  "version": "1.0.0",
  "description": "Debug version of CELO Pay extension",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CELO Pay Debug"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-simple.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
