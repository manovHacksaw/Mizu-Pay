{
  "manifest_version": 3,
  "name": "CELO Checkout Helper",
  "version": "1.0.0",
  "description": "A browser extension to assist with CELO checkout process on e-commerce sites.",
  "permissions": [
    "storage",
    "scripting", 
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CELO Checkout Helper"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["celo-logo.svg", "wallet.html", "wallet.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/celo-16.png",
    "32": "icons/celo-32.png", 
    "48": "icons/celo-48.png",
    "128": "icons/celo-128.png"
  }
}
